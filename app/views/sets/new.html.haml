%h2 Add Set

= simple_form_for @mtg_set do |f|
  = f.error_messages
  
  = f.input :name
  
  = f.input :released_at, :as => :date, :label => 'Date released'
  
  = f.input :num_cards, :label => 'Number of cards'
  
  = f.association :formats,
    :required => true,
    :as => :select,
    :hint => 'this is only format supported as this time',
    :include_blank => false,
    :input_html => {:multiple => nil, :size => 1}
  
  = submit_button 'Add this set'